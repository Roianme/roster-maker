rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Admin-only access - customize this based on your auth setup
    function isAdmin() {
      return isAuthenticated();
      // In production, check against admin user list or custom claims:
      // return isAuthenticated() && 
      //        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Venues collection - admin only
    match /venues/{venueId} {
      allow read, write: if isAdmin();
    }
    
    // Roles collection - admin only
    match /roles/{roleId} {
      allow read, write: if isAdmin();
    }
    
    // Staff collection - admin only
    match /staff/{staffId} {
      allow read, write: if isAdmin();
    }
    
    // Availability collection - admin only
    match /availability/{availId} {
      allow read, write: if isAdmin();
    }
    
    // Templates collection - admin only
    match /templates/{templateId} {
      allow read, write: if isAdmin();
    }
    
    // Rosters collection - admin only
    match /rosters/{rosterId} {
      allow read, write: if isAdmin();
    }
  }
}
