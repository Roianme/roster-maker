{
  "name": "roster-maker",
  "version": "0.1.0",
  "private": true,
  "description": "Restaurant roster maker monorepo - Flutter Web Admin + FastAPI Backend",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "install:backend": "cd backend && pip install -r requirements.txt",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && flutter run -d chrome",
    "build:frontend": "cd frontend && flutter build web",
    "deploy": "npm run build:frontend && firebase deploy"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0"
  }
}
